<?xml version="1.0" encoding="UTF-8"?>
 <beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
 
   <bean id="com.publish"
         class="org.springframework.context.support.ClassPathXmlApplicationContext" lazy-init="true">
     <constructor-arg>
       <list>
         <value>classpath:/applicationContext.xml</value>
         <value>classpath:/applicationContext-aop.xml</value>
       </list>
     </constructor-arg>
   </bean>
 <!--  
 <b:bean id ="passwordEncoder" class = "org.springframework.security.crypto.NoOpPasswordEncoder" factory-method = "getInstance" />
 -->
 </beans>